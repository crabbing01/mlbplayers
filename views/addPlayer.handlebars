<article>
    <form method="POST" action="/api/addPlayer">
        <div>
            <label>Player's Name: </label>
            <input type="text" name="name" size="50" placeholder="ex. Manny Machado">
        </div>
        <div>
            <label>Player's Position: </label>
            <input type="text" name="position" size="50" placeholder="ex. SS">
        </div>
        <div>
            <label>Is the Player an All-Star?: </label>
            <input type="text" name="all_star" size="50" placeholder="Yes/No">
        </div>
        <div>
            <label>Player's Contract(300 for 300 million): </label>
            <input type="text" name="contract" size="50" placeholder="ex. 300">
        </div>
        <div>
            <label>Player's Batting Average: </label>
            <input type="text" name="batting_average" rows="20" placeholder="ex. 0.273">
        </div>
        <div>
            <label>Teams Played For: </label>
            <input type="text" name="teams_played_for" rows="20" placeholder="ex. Orioles, Dodgers, Padres">
        </div>
        <button type="submit">Enter Player! </button>
    </form>
</article>